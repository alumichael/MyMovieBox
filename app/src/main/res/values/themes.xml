<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyMovieBox" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="background">@color/foreground</item>
        <item name="android:windowBackground">@color/foreground</item>

        <item name="fontFamily">@font/open_sans</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>
    </style>


    <style name="ToolbarText" parent="TextView">
        <item name="fontWeight">500</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/font_larger</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleTextAppearance">@style/ToolbarText</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@android:color/white</item>
        <item name="android:textColorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@android:color/black</item>
    </style>


    <style name="Theme.MyMovieBox.NoActionBar" parent="Theme.MyMovieBox">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyMovieBox.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyMovieBox.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MyMovieBox.NoActionBar.Fullscreen" parent="Theme.MyMovieBox.NoActionBar">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.MyMovieBox.NoActionBar.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.BackgroundContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/primaryTextColor</item>
        <item name="fullscreenTextColor">@color/primaryColor</item>
    </style>

    <style name="Widget.Theme.MyMovieBox.NoActionBar.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="TransparentText">
        <item name="android:textColor">#00000000</item>
    </style>


    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:colorControlHighlight">#E4BB24</item>
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:rating">4.5</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Headline" parent="TextView">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizePresetSizes">@array/autosize_text_sizes</item>
    </style>

    <style name="Button">
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="Button.Block" parent="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textColorHint">@color/secondaryTextColor</item>
    </style>


</resources>